# Production Environment Variables for Render Deployment

# Server Configuration
PORT=3000
NODE_ENV=production
BASE_URL=https://your-app-name.onrender.com

# Telegram Bot Configuration (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=@RemoteInternIndia

# Playwright Browser Configuration for Render
PLAYWRIGHT_BROWSERS_PATH=/opt/render/.cache/ms-playwright

# Optional: Rate limiting and scraping configuration
MAX_JOBS_PER_SOURCE=10
SCRAPE_TIMEOUT=60000
BROWSER_TIMEOUT=30000

# Optional: Monitoring and logging
LOG_LEVEL=info
ENABLE_DETAILED_LOGGING=false 